{{#each this}}
  <li id='{{id}}' class='js-item item'>
    <div class='movie__markup__img'>
      <img
        src={{poster_path}}
        alt={{title}}
        width='300px'
        height='450px'
      />
    </div>
    <p>Название: {{title}}</p>
    <p>Дата выхода: {{release_date}}</p>
    <p>Рейтинг: {{vote_average}}</p>
  </li>
{{/each}}